html 
  head 
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://fonts.cdnfonts.com/css/ibm-plex-sans", rel="stylesheet")
    title Password Reset
    style(type="text/css").
      *{
        padding: 0 !important;
        margin: 0 !important;
        font-family: 'IBM Plex Sans', Helvetica, Gill Sans, sans-serif;
      }
      .container {
        width: 100% !important;
        padding-bottom: 50px !important;
      }
      .mail-body {
        color: #5C5C80 !important;
        width: 600px;
        margin-right: auto !important;
        margin-left: auto !important;
        display: block;
      }
      .header-image {
        height: 200px !important;
        width: 100% !important;
        object-fit: cover;
      }
      .content {
        padding: 1rem !important;
      }
      .name {
        color: #5C5C80;
        font-size: 24px !important;
        font-weight: 700 !important;
      }
      .otp {
        font-size: 2rem;
      }
      .message-text {
        font-size: 14.5px;
        font-weight: 400 !important;
        color: #5C5C80;
        line-height: 26px;
        margin-top: 25px !important;
      }
      .highlight {
        color: #338470;
        font-weight: 600 !important;
      }
      .end-greeting {
        font-size: 14.5px;
        font-weight: 400 !important;
        color: #5C5C80;
      }
      @media (max-width: 768px) {
        .email-wrapper {
          width: 500px;
        }
      }
      @media (max-width: 600px) {
        .email-wrapper {
          width: auto;
        }
      }

  body 
    .container 
      .mail-body 
        .content
          h2.name Hello #{name},  
          p.message-text
            | You have requested for a password reset.
          p.message-text
            | Enter the 4-digit code below to reset your password 
          br
          b.otp.highlight #{otp}
          p.message-text
            | This code will expire in
            span.highlight  10 minutes.            
          br
          hr
          p.message-text
            | If you didn't request for a password reset, please ignore this message.
          br
          p.message-text Thanks! 
          p.end-greeting The E-Commerce Team 